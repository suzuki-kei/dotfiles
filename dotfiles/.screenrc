altscreen on
cjkwidth off
defencoding UTF-8
defscrollback 10240
escape ^Z^Z
hardstatus alwayslastline "%{= r} %H | %-w *%n %t* %+w %= | %Y-%m-%d %0c"
startup_message off
vbell off

bind r eval 'command -c resize'
bind -c resize ^]  command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

