#!/bin/bash

set -eu

function g
{
    local target=$(echo -n "$@" | jq -sMRr "@uri")
    local chrome_options="--args --incognito"

    case "${target}" in
        "")
            local url="https://google.com"
            ;;
        http*)
            local url="${target}"
            ;;
        *)
            local url="https://www.google.com/search?q=${target}"
            ;;
    esac

    open -n -a "Google Chrome" ${chrome_options} "${url}"
}

g "$@"

