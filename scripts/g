#!/bin/bash

set -eu

target=${1:-}
chrome_options="--args --incognito"

case "${target}" in
    "")
        open -n -a "Google Chrome" ${chrome_options} "https://google.com"
        ;;
    http*)
        open -n -a "Google Chrome" ${chrome_options} "${target}"
        ;;
    *)
        open -n -a "Google Chrome" ${chrome_options} "https://www.google.com/search?q=${target}"
        ;;
esac

