#!/bin/bash

set -eu

function g
{
    local target="$@"
    local chrome_options="--args --incognito"

    case "${target}" in
        "")
            local url="chrome://chrome-urls/"
            ;;
        http*)
            local url="${target}"
            ;;
        *)
            local url="https://www.google.com/search?q=$(echo -n ${target} | jq -sMRr '@uri')"
            ;;
    esac

    open -n -a "Google Chrome" ${chrome_options} "${url}"
}

g "$@"

